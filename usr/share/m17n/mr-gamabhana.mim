  ("Gy" "ज्ञ्")
  ("dny" "ज्ञ्")		      ; not in ITRANS Devanagari table
  ("x" "क्ष्")
  ("ksh" "क्ष्")
  ("jjn" "ज्ज्ञ")
  ("Ry" "ऱ्य्")
  ("Rh" "ऱ्ह्") 
  ("dhd" "द्ध्")
  ("vd" "द्व्"))

 (independent
  ("a" "अ")
  ("aa" "आ")
  ("A" "आ")
  ("i" "इ")
  ("ii" "ई")
  ("I" "ई")
  ("u" "उ")
  ("uu" "ऊ")
