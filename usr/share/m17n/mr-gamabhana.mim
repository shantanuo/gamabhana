  ("ee" (set CANDRA-E-O 0) "ई")       ; not in ITRANS Devanagari table
  ("e" (set CANDRA-E-O ?ऍ) "ए")
  ("ai" "ऐ")
  ("oo" (set CANDRA-E-O 0) "ऊ") 
  ("o" (set CANDRA-E-O ?ऑ) "ओ")
