  ("c" "च्")
  ("C" "छ्")			      ; not in ITRANS Devenagari table
  ("chh" "छ्")
  ("j" "ज्")
  (".j" "ज़्")
  ("jh" "झ्")
  ("J" "झ्")
  ("z" "झ")
  ("~n" "ञ्")
  ("JN" "ञ्")
  ("NY" "ञ्")
  ("T" "ट्")
  ("Th" "ठ्")
  ("D" "ड्")
  ("Dh" "ढ्")
  (".D" "ड़्")
  (".Dh" "ढ़्")
  ("N" "ण्")
  ("t" "त्")
  ("th" "थ्")
  ("d" "द्")
  ("dh" "ध्")
  ("n" "न्")
  (".n" "ऩ्")			      ; not in ITRANS Devenagari table
  ("p" "प्")
  ("ph" "फ्")
